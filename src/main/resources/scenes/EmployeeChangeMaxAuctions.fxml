<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.uw.sp18.tcss360a.group6.controller.EmployeeChangeMaxAuctionsController"
            prefHeight="480.0" prefWidth="680.0">
    <stylesheets>
        <URL value="@../css/Root.css"/>
    </stylesheets>

    <top>
        <BorderPane styleClass="header-section">
            <left>
                <Label id="header-text" text="Change Max Auctions in System"/>
            </left>
        </BorderPane>
    </top>

    <left>
        <VBox styleClass="sidebar-section">
            <Label text="Go Back" onMouseReleased="#back"/>
            <fx:include source="components/Logout.fxml"/>
        </VBox>
    </left>

    <center>
        <VBox styleClass="content-section" prefHeight="200.0" prefWidth="325.0">
            <Label fx:id="changeMaxAuctionLabel" text="Please enter the new maximum amount of auctions in system."
                   wrapText="true">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <Label fx:id="currentNewMaxLabel" text="New Maximum">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
            <TextField fx:id="newMax" onKeyReleased="#onEnter" maxWidth="100" />

        </VBox>
    </center>


    <bottom>
        <HBox styleClass="footer-section">
            <Label text="UWT, TCSS 360 A, Group 6, Spring 2018"/>
        </HBox>
    </bottom>
</BorderPane>
